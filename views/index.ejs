    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&family=Playfair+Display:ital,wght@0,700;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --primary-pink: #ff4d8d;
            --soft-cream: #fffcf9;
            --rich-black: #1a1a1a;
            --muted-pink: #ffdce5;
            --accent-purple: #8338ec;
            --transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Outfit', sans-serif;
            color: var(--rich-black);
            background-color: var(--soft-cream);
            line-height: 1.6;
            overflow-x: hidden;
        }

        /* --- Sassy Scrollbar --- */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: var(--soft-cream); }
        ::-webkit-scrollbar-thumb { background: var(--primary-pink); border-radius: 10px; }

        /* --- Announcement --- */
        .announcement-bar {
            background-color: var(--rich-black);
            color: white;
            text-align: center;
            padding: 10px;
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 2px;
            font-weight: 600;
        }

        /* --- Navbar --- */
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px 8%;
            background: rgba(255, 252, 249, 0.8);
            backdrop-filter: blur(10px);
            position: sticky;
            top: 0;
            z-index: 1000;
            border-bottom: 1px solid rgba(0,0,0,0.05);
        }

        .logo {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            font-weight: 700;
            font-style: italic;
            letter-spacing: -1px;
            color: var(--rich-black);
            text-decoration: none;
        }

        .nav-links a {
            text-decoration: none;
            color: var(--rich-black);
            margin: 0 20px;
            font-size: 0.9rem;
            font-weight: 600;
            text-transform: uppercase;
            transition: var(--transition);
        }

        .nav-links a:hover { color: var(--primary-pink); }

        .nav-right i {
            margin-left: 25px;
            font-size: 1.2rem;
            cursor: pointer;
            transition: var(--transition);
        }

        .nav-right i:hover { transform: translateY(-3px); color: var(--primary-pink); }

        /* --- Hero --- */
        .hero {
            height: 90vh;
            display: grid;
            grid-template-columns: 1.2fr 1fr;
            align-items: center;
            padding: 0 8%;
            gap: 40px;
        }

        .hero-content h2 {
            font-family: 'Playfair Display', serif;
            font-size: 5rem;
            line-height: 0.9;
            margin-bottom: 25px;
        }

        .hero-content p {
            font-size: 1.1rem;
            max-width: 400px;
            margin-bottom: 35px;
            color: #555;
        }

        .hero-image {
            height: 80%;
            background: url('https://images.unsplash.com/photo-1596462502278-27bfad450216?auto=format&fit=crop&w=800&q=80');
            background-size: cover;
            background-position: center;
            border-radius: 300px 300px 0 0;
            box-shadow: 40px 40px 0 var(--muted-pink);
        }

        .btn-main {
            padding: 18px 45px;
            background: var(--rich-black);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            display: inline-block;
            transition: var(--transition);
            border: 2px solid var(--rich-black);
        }

        .btn-main:hover {
            background: transparent;
            color: var(--rich-black);
            transform: scale(1.05);
        }

        /* --- Categories --- */
        .categories {
            padding: 100px 8%;
            text-align: center;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            margin-bottom: 50px;
        }

        .cat-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
            gap: 30px;
        }

        .cat-card img {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 15px;
            transition: var(--transition);
            filter: grayscale(100%);
        }

        .cat-card:hover img {
            filter: grayscale(0%);
            transform: rotate(5deg) scale(1.1);
            box-shadow: 0 20px 40px rgba(255, 77, 141, 0.2);
        }

        .cat-card p {
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* --- Product Grid --- */
        .products {
            padding: 100px 8%;
            background: white;
        }

        .product-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 40px;
        }

        .product-card {
            position: relative;
            transition: var(--transition);
        }

        .p-img-container {
            overflow: hidden;
            border-radius: 20px;
            background: var(--soft-cream);
            margin-bottom: 20px;
        }

        .product-card img {
            width: 100%;
            height: 400px;
            object-fit: cover;
            transition: var(--transition);
        }

        .product-card:hover img {
            transform: scale(1.08);
        }

        .product-card h4 {
            font-size: 1.2rem;
            margin-bottom: 5px;
        }

        .price {
            font-weight: 300;
            color: var(--primary-pink);
            font-size: 1.1rem;
            margin-bottom: 15px;
        }

        .add-btn {
            width: 100%;
            padding: 12px;
            background: none;
            border: 1px solid #ddd;
            border-radius: 50px;
            cursor: pointer;
            font-family: inherit;
            font-weight: 600;
            transition: var(--transition);
        }

        .add-btn:hover {
            background: var(--rich-black);
            color: white;
            border-color: var(--rich-black);
        }

        /* --- Philosophy --- */
        .philosophy {
            background: var(--muted-pink);
            padding: 120px 8%;
            text-align: center;
            border-radius: 100px 100px 0 0;
        }

        .philosophy h3 {
            font-family: 'Playfair Display', serif;
            font-size: 3.5rem;
            margin-bottom: 20px;
        }

        .philosophy p {
            font-size: 1.4rem;
            max-width: 700px;
            margin: 0 auto 40px;
            font-weight: 300;
        }

        /* --- Footer --- */
        footer {
            background: var(--rich-black);
            color: white;
            padding: 60px 8%;
            text-align: center;
        }

        footer p {
            opacity: 0.6;
            font-size: 0.8rem;
            letter-spacing: 1px;
        }

        /* Badge Styling */
        .sassy-badge {
            position: absolute;
            top: 20px;
            left: 20px;
            background: var(--primary-pink);
            color: white;
            padding: 5px 15px;
            border-radius: 50px;
            font-size: 0.7rem;
            font-weight: 600;
            z-index: 10;
            text-transform: uppercase;
        }

        @media (max-width: 768px) {
            .hero { grid-template-columns: 1fr; text-align: center; height: auto; padding: 100px 5%; }
            .hero-content h2 { font-size: 3rem; }
            .hero-image { display: none; }
            .nav-links { display: none; }
        }
    </style>
</head>
